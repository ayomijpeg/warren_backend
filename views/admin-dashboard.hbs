<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Warren and Company</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(section => {
                section.classList.add('hidden');
            });
            document.getElementById(sectionId).classList.remove('hidden');
        }
    </script>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-blue-700 text-white p-6">
            <h2 class="text-2xl font-bold mb-6">Admin Dashboard</h2>
            <nav>
                <ul>
                    <li class="mb-4"><button onclick="showSection('dashboard')" class="block w-full text-left p-2 hover:bg-blue-800 rounded">Dashboard</button></li>
                    <li class="mb-4"><button onclick="showSection('users')" class="block w-full text-left p-2 hover:bg-blue-800 rounded">Users</button></li>
                    <li class="mb-4"><button onclick="showSection('investments')" class="block w-full text-left p-2 hover:bg-blue-800 rounded">Investments</button></li>
                    <li class="mb-4"><button onclick="showSection('settings')" class="block w-full text-left p-2 hover:bg-blue-800 rounded">Settings</button></li>
                    <li><a href="/admin" class="block p-2 bg-red-500 hover:bg-red-600 rounded">Logout</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <!-- Dashboard Section -->
            <section id="dashboard" class="section">
                <h1 class="text-3xl font-bold mb-6">Welcome, Admin</h1>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="bg-white p-6 rounded shadow-md text-center">
                        <h3 class="text-xl font-bold">Total Users</h3>
                        <p class="text-3xl text-blue-700 mt-2">120</p>
                    </div>
                    <div class="bg-white p-6 rounded shadow-md text-center">
                        <h3 class="text-xl font-bold">Total Investments</h3>
                        <p class="text-3xl text-green-700 mt-2">$50,000</p>
                    </div>
                    <div class="bg-white p-6 rounded shadow-md text-center">
                        <h3 class="text-xl font-bold">Pending Approvals</h3>
                        <p class="text-3xl text-yellow-600 mt-2">5</p>
                    </div>
                </div>
            </section>

            <!-- Users Management Section -->
            <section id="users" class="section hidden">
                <h2 class="text-2xl font-bold mb-4">User Management</h2>
                <table class="w-full bg-white rounded shadow-md">
                    <thead>
                        <tr class="bg-blue-700 text-white">
                            <th class="p-3">ID</th>
                            <th class="p-3">Name</th>
                            <th class="p-3">Email</th>
                            <th class="p-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-t">
                            <td class="p-3">1</td>
                            <td class="p-3">John Doe</td>
                            <td class="p-3">john@example.com</td>
                            <td class="p-3">
                                <button class="bg-red-500 text-white px-3 py-1 rounded">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <!-- Investments Management Section -->
            <section id="investments" class="section hidden">
                <h2 class="text-2xl font-bold mb-4">Investments Management</h2>
                <table class="w-full bg-white rounded shadow-md">
                    <thead>
                        <tr class="bg-blue-700 text-white">
                            <th class="p-3">ID</th>
                            <th class="p-3">Investor</th>
                            <th class="p-3">Amount</th>
                            <th class="p-3">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-t">
                            <td class="p-3">1</td>
                            <td class="p-3">Jane Smith</td>
                            <td class="p-3">$5,000</td>
                            <td class="p-3 text-green-600">Approved</td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <!-- Settings Section -->
            <section id="settings" class="section hidden">
                <h2 class="text-2xl font-bold mb-4">Admin Settings</h2>
                <p class="text-gray-700">Settings options will be available here.</p>
            </section>
        </main>
    </div>
</body>
</html>
